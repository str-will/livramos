# letra a 
def horario (h):
    horas= h/60
    minutos= h%60
    x = print('agora são %d horas e %d minutos'%(horas,minutos))
    return x
h = int(input('quantos minutos são???'))
print(horario (h))

# letra b 

def convert_horario(m):
    hr= m[0:2]
    mn=m[3:5]
    x = (hr*60)+mn
    print('são %d minutos'%(x))
    return
